<%= form_for @player do |f|  %>

  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@player.errors.count, "error") %> occurred while saving:
      </h2>
      <ul>
        <% @player.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :hand %>
    <%= f.text_field :hand %>
  </p>
  
  <p>
    <%= f.label :grade %>
    <%= f.text_field :grade %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
<% end %>
